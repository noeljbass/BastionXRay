{
    "manifest_version": 3,
    "name": "Bastion X-Ray",
    "version": "1.0",
    "description": "Access paywalled articles through the Wayback Machine.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png",
        "512": "logo.png" 
    }
}
